                MDRaisedButton:
                    id:retour
                    text:'retour' 
                    font_style:"H6"
                    size_hint_x:0.8
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                                
        # menu de navigation en bas
        MDBoxLayout:
            size_hint_y:None
            md_bg_color:.9,.9,.9,1
            height:dp(60)
            padding:[0,0,0,15]
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'home'
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_color
                    on_release: app.sm.current = "home"
                MDLabel:
                    text:'Home'
                    valign:"center"
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_color
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
