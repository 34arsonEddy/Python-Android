                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'cards-heart'
                MDLabel:
                    text:'Favorite'
                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'account'
                    on_release:app.verifcation_login() 
                    
                MDLabel:
                    text:'Profile'
                    valign:"center"
                    halign:"center"
                    

