                padding:dp(12)
                
                TabCard:
                    icon:'tshirt-crew'
                    text:"Vet"
                    md_bg_color:app.theme_cls.primary_color
                TabCard:
                    icon:'shoe-sneaker'
                    text:"shoe"
                    
                TabCard:
                    icon:'redhat'
                    text:"hat"
        MDBoxLayout:
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing:15
                padding:10
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                adaptive_height:True
                MDRaisedButton:
                    id: ajout
                    text:'Nouveau type du vêtement'
                    font_style:"H6"
                    size_hint_x:0.8
                    pos_hint: {'center_x': 0.5,'center_y': 0.5}
                    on_release:app.sm.current = "formProduit"

                MDRaisedButton:
                    padding:15
                    font_style:"H6"
                    id:modifier
                    text:'Modifier le donnée existe'
                    size_hint_x:0.8
